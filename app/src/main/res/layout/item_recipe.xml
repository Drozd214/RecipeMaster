<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_recipe_background"
    android:padding="8dp">

    <ImageView
        android:id="@+id/recipe_imageView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/recipe_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/recipe_score_TextView"
        app:layout_constraintEnd_toEndOf="@+id/recipe_imageView"
        app:layout_constraintStart_toStartOf="@+id/recipe_imageView"
        app:layout_constraintTop_toBottomOf="@+id/recipe_imageView"
        tools:text="Some long and strange name for specific recipe" />

    <TextView
        android:id="@+id/recipe_score_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/recipe_imageView"
        app:drawableStartCompat="@drawable/icon_trophy_score"
        tools:text="85%" />

    <TextView
        android:id="@+id/recipe_servings_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/recipe_imageView"
        app:layout_constraintStart_toStartOf="@+id/recipe_imageView"
        app:layout_constraintTop_toTopOf="@+id/recipe_score_TextView"
        app:drawableStartCompat="@drawable/icon_servings"
        tools:text="4" />

    <TextView
        android:id="@+id/recipe_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/recipe_imageView"
        app:layout_constraintTop_toTopOf="@+id/recipe_score_TextView"
        app:drawableStartCompat="@drawable/icon_time"
        tools:text="1h 45m" />

</androidx.constraintlayout.widget.ConstraintLayout>